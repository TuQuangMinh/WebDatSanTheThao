@model web.Models.San
@{
    ViewData["Title"] = "Xóa sân";
}

<div class="container-fluid py-4" style="background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%); min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-lg border-0" style="border-radius: 20px; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.95);">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #dc3545, #fd7e14); border-radius: 20px 20px 0 0; border: none;">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                        <i class="fas fa-exclamation-triangle fa-2x text-white me-3"></i>
                        <h2 class="text-white mb-0 fw-bold">Xóa Sân Thể Thao</h2>
                    </div>
                    <p class="text-white-50 mb-0">Xác nhận xóa sân khỏi hệ thống</p>
                </div>

                <div class="card-body p-5">
                    <!-- Warning Alert -->
                    <div class="alert alert-danger border-0 rounded-pill mb-4" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.1), rgba(253, 126, 20, 0.1)); border-left: 4px solid #dc3545 !important;">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x text-danger me-3"></i>
                            <div>
                                <h6 class="text-danger fw-bold mb-1">Cảnh báo quan trọng!</h6>
                                <p class="mb-0 text-dark">Hành động này không thể hoàn tác. Tất cả dữ liệu liên quan, bao gồm các slot đặt sân, sẽ bị xóa vĩnh viễn.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Confirmation Message -->
                    <div class="text-center mb-4">
                        <h4 class="text-danger fw-bold mb-2">Bạn có chắc chắn muốn xóa sân này?</h4>
                        <p class="text-muted">Vui lòng xem lại thông tin trước khi xác nhận</p>
                    </div>

                    <!-- San Information Card -->
                    <div class="info-card p-4 mb-4" style="background: linear-gradient(135deg, #f8f9fa, #e9ecef); border-radius: 15px; border-left: 4px solid #dc3545;">
                        <h5 class="text-danger fw-bold mb-4">
                            <i class="fas fa-info-circle me-2"></i>Thông tin sân sẽ bị xóa
                        </h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">TÊN SÂN</label>
                                    <div class="info-value text-dark fw-bold fs-5">
                                        <i class="fas fa-tag text-danger me-2"></i>@Model.Name
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">LOẠI SÂN</label>
                                    <div class="info-value text-dark fw-bold">
                                        <i class="fas fa-list text-danger me-2"></i>@(Model.Category?.Name ?? "Chưa phân loại")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">ĐỊA CHỈ</label>
                                    <div class="info-value text-dark fw-bold">
                                        <i class="fas fa-map-marker-alt text-danger me-2"></i>@Model.Location
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">GIÁ/GIỜ</label>
                                    <div class="info-value text-success fw-bold fs-5">
                                        <i class="fas fa-money-bill-wave me-2"></i>@Model.PricePerHour.ToString("C")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">GIỜ MỞ CỬA</label>
                                    <div class="info-value text-dark fw-bold">
                                        <i class="fas fa-clock text-danger me-2"></i>@Model.OperatingStartTime.ToString(@"hh\:mm")
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-item">
                                    <label class="fw-semibold text-muted small">GIỜ ĐÓNG CỬA</label>
                                    <div class="info-value text-dark fw-bold">
                                        <i class="fas fa-clock text-danger me-2"></i>@Model.OperatingEndTime.ToString(@"hh\:mm")
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Cover))
                        {
                            <div class="info-item mt-4">
                                <label class="fw-semibold text-muted small">MÔ TẢ</label>
                                <div class="info-value text-dark">
                                    <i class="fas fa-align-left text-danger me-2"></i>@Model.Cover
                                </div>
                            </div>
                        }

                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="info-item mt-4">
                                <label class="fw-semibold text-muted small">HÌNH ẢNH (@Model.Images.Count ảnh)</label>
                                <div class="images-preview mt-3">
                                    <div class="row g-2">
                                        @foreach (var image in Model.Images.Take(6))
                                        {
                                            <div class="col-4 col-md-2">
                                                <div class="image-item position-relative">
                                                    <img src="@image.Url" alt="Hình ảnh sân" class="img-fluid rounded shadow-sm" style="height: 80px; width: 100%; object-fit: cover;" />
                                                    <div class="position-absolute top-0 end-0 m-1">
                                                        <span class="badge bg-danger rounded-circle">
                                                            <i class="fas fa-times fa-xs"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (Model.Images.Count > 6)
                                        {
                                            <div class="col-4 col-md-2">
                                                <div class="more-images d-flex align-items-center justify-content-center bg-light rounded" style="height: 80px;">
                                                    <span class="text-muted fw-bold">+@(Model.Images.Count - 6)</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-5 pt-4" style="border-top: 2px solid #e9ecef;">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>

                        <div class="action-buttons">
                            <form method="post" asp-action="Delete" class="d-inline" id="deleteForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />
                                <button type="button" class="btn btn-outline-danger rounded-pill px-4 py-2 me-2" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                    <i class="fas fa-times me-2"></i>Hủy bỏ
                                </button>
                                <button type="submit" class="btn btn-danger rounded-pill px-5 py-2 fw-semibold" style="background: linear-gradient(135deg, #dc3545, #fd7e14); border: none; box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);">
                                    <i class="fas fa-trash-alt me-2"></i>Xác nhận xóa
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 15px;">
            <div class="modal-header bg-danger text-white" style="border-radius: 15px 15px 0 0;">
                <h5 class="modal-title fw-bold" id="confirmModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa sân
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-trash-alt fa-4x text-danger mb-3"></i>
                    <h6 class="fw-bold text-dark">Bạn có chắc chắn muốn xóa sân "@Model.Name"?</h6>
                    <p class="text-muted">Thao tác này sẽ xóa tất cả các slot đặt sân liên quan và không thể hoàn tác!</p>
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy bỏ
                </button>
                <button type="button" class="btn btn-danger rounded-pill px-4" onclick="confirmDelete()">
                    <i class="fas fa-trash-alt me-2"></i>Xóa ngay
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('confirmModal'));
            modal.hide();

            // Show loading state
            const submitBtn = document.querySelector('#deleteForm button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xóa...';
            submitBtn.disabled = true;

            // Submit form after a short delay for UX
            setTimeout(function() {
                document.getElementById('deleteForm').submit();
            }, 1000);
        }

        // Form submission with confirmation
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // Show confirmation modal instead of browser confirm
            const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
            modal.show();
        });

        // Add animation on load
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';

            setTimeout(function() {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
}

<style>
    .info-item {
        margin-bottom: 1rem;
    }

        .info-item label {
            display: block;
            margin-bottom: 0.25rem;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }

    .info-value {
        font-size: 1rem;
        line-height: 1.4;
    }

    .images-preview .image-item {
        transition: all 0.3s ease;
    }

        .images-preview .image-item:hover {
            transform: scale(1.05);
        }

    .btn-danger {
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4) !important;
        }

    .more-images {
        border: 2px dashed #dee2e6;
        transition: all 0.3s ease;
    }

        .more-images:hover {
            border-color: #dc3545;
            background-color: rgba(220, 53, 69, 0.05) !important;
        }
</style>