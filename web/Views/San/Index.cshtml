@model IEnumerable<web.Models.San>

@{
    ViewData["Title"] = "Danh sách sân thể thao";
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalItems = ViewBag.TotalItems ?? 0;
}

<div class="hero-section bg-gradient-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">⚽ Đặt Sân Thể Thao</h1>
                <p class="lead mb-4">Tìm và đặt sân thể thao chất lượng cao với giá tốt nhất</p>
                <div class="d-flex gap-3">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn btn-light btn-lg px-4">
                            <i class="fas fa-plus me-2"></i>Thêm sân mới
                        </a>
                    }                   
                </div>
            </div>
            <div class="col-lg-4 text-center">
                <div class="hero-icon">
                    <i class="fas fa-futbol fa-8x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Filter Section -->
    <div class="filter-section mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="fas fa-filter me-2 text-primary"></i>Bộ lọc tìm kiếm
                </h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="Tên sân..." id="searchName">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" placeholder="Vị trí..." id="searchLocation">
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="categoryFilter">
                            <option value="">Tất cả danh mục</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" id="priceFilter">
                            <option value="">Tất cả giá</option>
                            <option value="0-100000">Dưới 100k</option>
                            <option value="100000-200000">100k - 200k</option>
                            <option value="200000-500000">200k - 500k</option>
                            <option value="500000-999999999">Trên 500k</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-section mb-5">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card border-0 bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-futbol fa-2x mb-2"></i>
                        <h3 class="fw-bold">@totalItems</h3>
                        <p class="mb-0">Tổng số sân</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-success text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-star fa-2x mb-2"></i>
                        <h3 class="fw-bold">4.8</h3>
                        <p class="mb-0">Điểm đánh giá</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-warning text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-2x mb-2"></i>
                        <h3 class="fw-bold">1,500+</h3>
                        <p class="mb-0">Khách hàng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-2x mb-2"></i>
                        <h3 class="fw-bold">24/7</h3>
                        <p class="mb-0">Hỗ trợ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sports Fields Grid -->
    <div class="row g-4" id="sportsFieldsGrid">
        @foreach (var san in Model)
        {
            <div class="col-lg-4 col-md-6 field-card" data-name="@san.Name.ToLower()" data-location="@san.Location.ToLower()" data-price="@san.PricePerHour" data-category="@(san.Category?.Name ?? "")">
                <div class="card h-100 shadow-hover border-0 overflow-hidden">
                    <div class="position-relative">
                        @if (san.Images != null && san.Images.Any())
                        {
                            <img src="@san.Images.First().Url" class="card-img-top field-image" alt="@san.Name">
                        }
                        else
                        {
                            <div class="placeholder-image d-flex align-items-center justify-content-center">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-primary fs-6">@san.PricePerHour.ToString("N0") VNĐ/h</span>
                        </div>
                        <div class="position-absolute bottom-0 start-0 end-0 field-overlay">
                            <div class="p-3 text-white">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    <small>@san.Location</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold text-dark mb-0">@san.Name</h5>
                            <div class="field-rating">
                                <i class="fas fa-star text-warning"></i>
                                <small class="text-muted">4.8</small>
                            </div>
                        </div>

                        <div class="field-info mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-tag text-primary me-2"></i>
                                <span class="badge bg-light text-dark">@(san.Category?.Name ?? "Chưa phân loại")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(san.Cover))
                            {
                                <p class="text-muted small mb-0">@(san.Cover.Length > 80 ? san.Cover.Substring(0, 80) + "..." : san.Cover)</p>
                            }
                        </div>

                        <div class="field-features mb-3">
                            <div class="row g-2 text-center">
                                <div class="col-4">
                                    <div class="feature-item">
                                        <i class="fas fa-parking text-success"></i>
                                        <small class="d-block">Bãi đỗ xe</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="feature-item">
                                        <i class="fas fa-shower text-info"></i>
                                        <small class="d-block">Phòng tắm</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="feature-item">
                                        <i class="fas fa-wifi text-primary"></i>
                                        <small class="d-block">WiFi</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0 pt-0">
                        <div class="d-grid gap-2">
                            <a asp-action="Detail" asp-route-id="@san.Id" class="btn btn-primary btn-lg">
                                <i class="fas fa-calendar-plus me-2"></i>Đặt sân ngay
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@san.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@san.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Xóa
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (var i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="empty-state">
                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">Không tìm thấy sân nào</h3>
                <p class="text-muted">Hãy thử tạo sân mới hoặc điều chỉnh bộ lọc</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Tạo sân mới
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <style>
        :root {
            --primary-color: #28a745;
            --secondary-color: #17a2b8;
            --accent-color: #ffc107;
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }

        .hero-section {
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                pointer-events: none;
            }

        .shadow-hover {
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }

            .shadow-hover:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.1) !important;
                border-color: var(--primary-color);
            }

        .field-image {
            height: 220px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .card:hover .field-image {
            transform: scale(1.05);
        }

        .placeholder-image {
            height: 220px;
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
        }

        .field-overlay {
            background: linear-gradient(transparent, rgba(0,0,0,0.7));
        }

        .field-rating {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .feature-item {
            padding: 8px;
            border-radius: 8px;
            background: #f8f9fa;
            transition: all 0.2s ease;
        }

            .feature-item:hover {
                background: #e9ecef;
                transform: translateY(-2px);
            }

            .feature-item i {
                font-size: 1.2rem;
                margin-bottom: 4px;
            }

        .btn {
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background: #218838;
                border-color: #218838;
                transform: translateY(-1px);
            }

        .filter-section .card {
            border-radius: 12px;
        }

        .stats-section .card {
            border-radius: 12px;
            transition: transform 0.2s ease;
        }

            .stats-section .card:hover {
                transform: translateY(-3px);
            }

        .empty-state {
            padding: 60px 0;
        }

        .pagination .page-link {
            border-radius: 6px;
            margin: 0 3px;
            color: var(--primary-color);
        }

        .pagination .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .pagination .page-item.disabled .page-link {
            color: #6c757d;
        }
    </style>

    <script>
        // Search and Filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchName = document.getElementById('searchName');
            const searchLocation = document.getElementById('searchLocation');
            const categoryFilter = document.getElementById('categoryFilter');
            const priceFilter = document.getElementById('priceFilter');

            function filterFields() {
                const nameQuery = searchName.value.toLowerCase();
                const locationQuery = searchLocation.value.toLowerCase();
                const categoryQuery = categoryFilter.value;
                const priceRange = priceFilter.value;

                const fieldCards = document.querySelectorAll('.field-card');

                fieldCards.forEach(card => {
                    const name = card.dataset.name;
                    const location = card.dataset.location;
                    const category = card.dataset.category;
                    const price = parseFloat(card.dataset.price);

                    let show = true;

                    if (nameQuery && !name.includes(nameQuery)) show = false;
                    if (locationQuery && !location.includes(locationQuery)) show = false;
                    if (categoryQuery && category !== categoryQuery) show = false;

                    if (priceRange) {
                        const [min, max] = priceRange.split('-').map(Number);
                        if (price < min || price > max) show = false;
                    }

                    card.style.display = show ? 'block' : 'none';
                });
            }

            [searchName, searchLocation, categoryFilter, priceFilter].forEach(element => {
                element.addEventListener('input', filterFields);
                element.addEventListener('change', filterFields);
            });

            // Update pagination links to include filter parameters
            const paginationLinks = document.querySelectorAll('.pagination .page-link');
            paginationLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const href = new URL(link.href);
                    if (searchName.value) href.searchParams.set('searchName', searchName.value);
                    if (searchLocation.value) href.searchParams.set('searchLocation', searchLocation.value);
                    if (categoryFilter.value) href.searchParams.set('category', categoryFilter.value);
                    if (priceFilter.value) href.searchParams.set('priceRange', priceFilter.value);
                    link.href = href.toString();
                });
            });
        });
    </script>
}