@model RevenueViewModel
@{
    ViewData["Title"] = "Quản Lý Doanh Thu và Thống Kê";
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Biểu đồ doanh thu theo ngày
            const ctxDate = document.getElementById('revenueByDateChart').getContext('2d');
            new Chart(ctxDate, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueByDate.Select(r => r.Date.ToString("dd/MM/yyyy")))),
                    datasets: [{
                        label: 'Doanh Thu (VND)',
                        data: @Html.Raw(Json.Serialize(Model.RevenueByDate.Select(r => r.TotalRevenue))),
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, title: { display: true, text: 'Doanh Thu (VND)' } },
                        x: { title: { display: true, text: 'Ngày' } }
                    }
                }
            });

            // Biểu đồ doanh thu theo danh mục
            const ctxCategory = document.getElementById('revenueByCategoryChart').getContext('2d');
            new Chart(ctxCategory, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.RevenueByCategory.Select(r => r.CategoryName))),
                    datasets: [{
                        label: 'Doanh Thu Theo Danh Mục',
                        data: @Html.Raw(Json.Serialize(Model.RevenueByCategory.Select(r => r.TotalRevenue))),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { position: 'right' } }
                }
            });

            // Biểu đồ trạng thái đặt chỗ
            const ctxStatus = document.getElementById('bookingStatusChart').getContext('2d');
            new Chart(ctxStatus, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.BookingStatusCounts.Select(s => s.Status))),
                    datasets: [{
                        label: 'Số Lượng',
                        data: @Html.Raw(Json.Serialize(Model.BookingStatusCounts.Select(s => s.Count))),
                        backgroundColor: 'rgba(54, 162, 235, 0.7)'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, title: { display: true, text: 'Số Lượng' } },
                        x: { title: { display: true, text: 'Trạng Thái' } }
                    }
                }
            });
        });
    </script>
}

<div class="container-fluid mt-4">
    <h2 class="mb-4 text-center">Quản Lý Doanh Thu và Thống Kê</h2>

    <!-- Bộ lọc -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">Bộ Lọc</div>
        <div class="card-body">
            <form asp-action="RevenueManagement" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Từ ngày</label>
                        <input type="date" class="form-control" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Đến ngày</label>
                        <input type="date" class="form-control" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        <select class="form-select" name="categoryId">
                            <option value="">Tất cả</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 align-self-end">
                        <button type="submit" class="btn btn-primary w-100">Lọc</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Thống kê tổng quan -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Tổng Doanh Thu</h5>
                    <p class="card-text fs-4">@Model.TotalRevenue.ToString("N0") VND</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Số Đơn Hàng</h5>
                    <p class="card-text fs-4">@Model.OrderCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Số Lượt Đặt Sân</h5>
                    <p class="card-text fs-4">@Model.BookingCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">Doanh Thu Theo Ngày</div>
                <div class="card-body">
                    <canvas id="revenueByDateChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">Doanh Thu Theo Danh Mục</div>
                <div class="card-body">
                    <canvas id="revenueByCategoryChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">Thống Kê Trạng Thái Đặt Sân</div>
                <div class="card-body">
                    <canvas id="bookingStatusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng chi tiết đơn hàng -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-primary text-white">Chi Tiết Đơn Hàng</div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã Đơn Hàng</th>
                        <th>Ngày Đặt</th>
                        <th>Khách Hàng</th>
                        <th>Sân</th>
                        <th>Thời Gian</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.OrderDetails)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                            <td>@order.UserName</td>
                            <td>@order.SanName</td>
                            <td>@order.BookingDate.ToString("dd/MM/yyyy") @order.StartTime - @order.EndTime</td>
                            <td>@order.Price.ToString("N0") VND</td>
                            <td>@order.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card { border-radius: 10px; }
    .card-header { font-weight: bold; }
    .table th { background-color: #f8f9fa; }
</style>