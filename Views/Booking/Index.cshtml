@model List<web.Models.BookingItem>

@{
    ViewData["Title"] = "Giỏ đặt sân";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ đặt sân</h2>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Tên sân</th>
                                <th>Ngày đặt</th>
                                <th>Thời gian</th>
                                <th>Giá</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(i => i.BookingDate).ThenBy(i => i.StartTime))
                            {
                                <tr>
                                    <td><strong>@(item.San != null ? item.San.Name : "Không có tên sân")</strong></td>
                                    <td>@item.BookingDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</td>
                                    <td>@item.TotalPrice.ToString("N0") VNĐ</td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                            <input type="hidden" name="sanId" value="@item.SanId" />
                                            <input type="hidden" name="slotId" value="@item.BookingSlotId" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-end mt-3">
                    <h4 class="text-primary">
                        Tổng tiền: @Model.Sum(i => i.TotalPrice).ToString("N0") VNĐ
                    </h4>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="ClearCart" class="btn btn-outline-secondary">
                        <i class="fas fa-trash"></i> Xóa tất cả
                    </a>
                    <a asp-action="Checkout" class="btn btn-primary">
                        <i class="fas fa-credit-card"></i> Thanh toán
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-info-circle fa-2x mb-3"></i>
            <p class="mb-0">Giỏ đặt sân của bạn đang trống.</p>
            <a asp-controller="San" asp-action="Index" class="btn btn-primary mt-3">Tìm sân ngay</a>
        </div>
    }
</div>

<style>
    .table-dark th {
        background-color: #343a40;
    }

    .btn-primary {
        background-color: #667eea;
        border-color: #667eea;
    }

        .btn-primary:hover {
            background-color: #5a6fd8;
            border-color: #5a6fd8;
        }

    .alert-info {
        background-color: #e7f1ff;
        border-color: #d6e9ff;
    }

    .card {
        border-radius: 15px;
    }
</style>